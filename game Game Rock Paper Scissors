ready= input("Are you ready?")
while (True):
        if ready=="YES" or "yes":
                print("what's your choice?"+"\n"+"Sang --> Enter: 1"+"\n"+"Kaghaz --> Enter: 2" + "\n"+"Gheichi --> Enter: 3")
